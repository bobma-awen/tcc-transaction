{
    "name": "bobma-awen/tcc-transaction",
    "authors": [
        {
            "name": "maxiaowen1007@163.com",
            "email": "maxiaowen881007"
        }
    ],
    "require": {
        "hyperf/nsq": "~2.0.0",
        "hyperf/snowflake": "~2.0.0",
        "hyperf/logger": "~2.0.0",
        "phpmailer/phpmailer": "~6.1"
    },
    "replace":{
        "loyaltylu/transaction": "2.0.0"
    },
    "autoload": {
        "psr-4": {
            "LoyaltyLu\\TccTransaction\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LoyaltyLu\\TccTransaction\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {},
        "hyperf": {
            "config": "LoyaltyLu\\TccTransaction\\ConfigProvider"
        }
    },
    "scripts": {
        "test": "./bin/co-phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "license-check": "docheader check src/ test/",
        "cs-fix": "php-cs-fixer fix $1",
        "json-fix": "./bin/composer-json-fixer",
        "analyse": "phpstan analyse --memory-limit 300M -l 3 -c phpstan.neon"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
